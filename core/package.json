    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.33",
    "mysql2": "^3.15.3",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
